
<div id="mainContainer" class="container">
  <div class="panel panel-default">
    <div class="panel-heading"><h2>Log in</h2></div>
    <div class="panel-body">
      <div class="row">
        <div class="col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading">
            </div>
            <div class="panel-body">
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, required: false, autofocus: true %>
                <%= f.input :password, required: false %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <ul class="text-center list-inline">
               <li ><div class="form-actions btn-block" style="margin-right:20px" >
                <%= f.button :submit, "Log in" %>
              </div></li>
              <li><div style="margin:10px">
                <%= link_to user_facebook_omniauth_authorize_path(:facebook) do %>
                <div class=" btn btn-default btn-social btn-facebook">
                  <i class="fa fa-facebook"></i> Log in with Facebook
                </div>
                <% end %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
