<div class="weather-report text-center"><h2>These are your bookmarks</h2></div>
<div class="container">
  <div class="row">
    <% @bookmarks.each do |book| %>
      <% book = book.recommendation %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <%= render 'shared/bookmarks', r: book %>
      </div>
    <% end %>
    <% if @bookmarks.empty? %>
    <div class="text-center no-result">
      <h3>Ops... You have no bookmarks</h3>
    </div>
    <% end %>
  </div>
  <div class="text-center">
  <%= link_to :back do %>
        <div class="text-center btn btn-back">
          <i class="glyphicon glyphicon-chevron-left"></i> Back
        </div>
        <% end %>
  </div>
</div>



