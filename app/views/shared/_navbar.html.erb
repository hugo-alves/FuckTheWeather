<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo18.png" %>
  <% end %>

  <!-- Right Navigation -->
    <!-- Different navigation if login or not -->
    <% if user_signed_in? %>
      <div class="navbar-wagon-right hidden-xs hidden-sm">

      <!-- Notification -->

      <!-- Profile picture and dropdown -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag current_user.facebook_picture_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to user_profile_path(current_user) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "Edit my Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to user_bookmarks_path(current_user) do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "My Bookmarks") %>
              <% end %>
            </li>
            <li>
              <%= link_to user_ratings_path(current_user) do %>
                <i class="fa fa-home"></i>  <%= t(".profile", default: "My Ratings") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
            </div>
          </div>
          </div>
    <% else %>
  <div class="navbar-wagon-right hidden-sm hidden-xs">
    <div class="navbar-wagon-item">
      <div class="dropdown">
      <!-- Login text link -->
      <%= link_to t(".sign_in", default: "Register"), new_user_registration_path, class: "navbar-wagon-link btn btn-default" %>

      <%= link_to t(".sign_in", default: "Sign in"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-button btn btn-default" %>
        </div>
      </div>
  </div>
    <% end %>

    <!-- Button (call-to-action) -->

    <!-- Dropdown list appearing on mobile only -->
      <div class="navbar-wagon-right hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

        <% if user_signed_in? %>
          <li>
            <%= link_to user_profile_path(current_user) do %>
              <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
            <% end %>
          </li>
          <li>
            <%= link_to edit_user_registration_path do %>
              <i class="fa fa-home"></i>  <%= t(".profile", default: "Edit my Profile") %>
            <% end %>
          </li>
            <li>
                <%= link_to user_bookmarks_path(current_user) do %>
                  <i class="fa fa-home"></i>  <%= t(".profile", default: "My Bookmarks") %>
                <% end %>
              </li>
              <li>
                <%= link_to user_ratings_path(current_user) do %>
                  <i class="fa fa-home"></i>  <%= t(".profile", default: "My Ratings") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
                <% end %>
              </li>
        <% else %>
          <li>
            <%= link_to t(".sign_in", default: "Sign up"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" %>
            <%= link_to t(".sign_in", default: "Sign in"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>

</div>


