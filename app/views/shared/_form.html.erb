<div class="search-wrapper text-center">
  <div class="container">
    <div class="form-inline">
      <%= form_tag(recommendations_path, :method => 'get', id: 'search-form') do |f| %>
        <div class="form-group">
          <%= text_field_tag :city, params[:search], placeholder: "Enter address", class:"form-control" %>
          <%= hidden_field_tag :latitude %>
          <%= hidden_field_tag :longitude %>
        </div>
        <%= submit_tag "Search", class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
