<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="grey-wrapper wrapper">
      <%= simple_form_for @recommendation do |r| %>
      <%= r.input :name %>
      <%= r.input :description %>
      <%= r.input :address %>
      <%= r.input :category %>
      <%= r.input :day_time %>
      <%= r.input :weather_type %>
      <%= r.input :photo %>
      <p><%= r.button :submit, class:"btn btn-default" %></p>
      <% end %>
    </div>
  </div>
</div>